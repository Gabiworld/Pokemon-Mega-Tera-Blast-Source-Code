<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/qg_agreement_dialog" android:layout_width="@dimen/qg_agreement_dialog_width" android:layout_height="wrap_content" android:minHeight="180dp">
    <FrameLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:minHeight="10dp">
        <ImageView android:layout_gravity="center" android:id="@+id/img_logo" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/login_logo"/>
    </FrameLayout>
    <TextView android:textSize="@dimen/qg_agreement_text_size" android:textColor="@color/qg_agreement_text_color" android:layout_gravity="center" android:id="@+id/tv_agreement_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="15dp" android:layout_marginRight="18dp" android:text="@string/qg_agree_service_and_policy"/>
    <View android:background="@color/qg_agreement_dividing_line_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="35dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="45dp">
        <TextView android:textSize="@dimen/qg_agreement_btn_text_size" android:textColor="@color/qg_agreement_btn_color" android:gravity="center" android:id="@+id/btn_cancel" android:background="@drawable/qg_agreement_dialog_left_btn_bg" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/qg_agreement_cancel" android:layout_weight="1"/>
        <View android:background="@color/qg_agreement_dividing_line_color" android:layout_width="0.5dp" android:layout_height="match_parent"/>
        <TextView android:textSize="@dimen/qg_agreement_btn_text_size" android:textColor="@color/qg_agreement_btn_color" android:gravity="center" android:id="@+id/btn_confirm" android:background="@drawable/qg_agreement_dialog_right_btn_bg" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/qg_agreement_confirm" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
