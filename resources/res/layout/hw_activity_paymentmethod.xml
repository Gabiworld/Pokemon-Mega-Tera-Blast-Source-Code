<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_gravity="center" android:layout_width="@dimen/hw_paymentMethod_width" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="@drawable/hw_dialog_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/hw_item_textSize" android:textStyle="bold" android:textColor="@color/hw_dialog_title_textColor" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/textView" android:padding="@dimen/hw_paymentMethod_title_padding" android:layout_width="wrap_content" android:layout_height="@dimen/hw_paymentMethod_title_height" android:text="@string/hw_paymentMethod_title"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="@dimen/hw_paymentMethod_width" android:layout_height="match_parent">
                <TextView android:textSize="@dimen/hw_item_textSize" android:textStyle="bold" android:textColor="@color/hw_item_content_textColor" android:gravity="center" android:id="@+id/tv_googlePlay" android:padding="@dimen/hw_item_padding" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/hw_item_height" android:text="@string/hw_paymentMethod_googlePlay"/>
                <TextView android:textSize="@dimen/hw_item_textSize" android:textStyle="bold" android:textColor="@color/hw_item_content_textColor" android:gravity="center" android:id="@+id/tv_oneStore" android:padding="@dimen/hw_item_padding" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/hw_item_height" android:text="@string/hw_paymentMethod_oneStore"/>
                <TextView android:background="@color/hw_divider_bg" android:layout_width="match_parent" android:layout_height="@dimen/hw_divider_size" android:layout_marginLeft="@dimen/hw_divider_marginSide" android:layout_marginRight="@dimen/hw_divider_marginSide"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/tv_discountPayment" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:textSize="@dimen/hw_item_textSize" android:textStyle="bold" android:textColor="@color/hw_item_content_textColor" android:gravity="center" android:id="@+id/tv_otherPayment" android:padding="@dimen/hw_item_padding" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/hw_item_height" android:text="@string/hw_paymentMethod_otherPayment"/>
                <TextView android:layout_width="match_parent" android:layout_height="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/qg_view_exit_btn"/>
    </FrameLayout>
</ScrollView>
